var dbhelper = require('dbhelper.js');

dbhelper.instalacao();
var quizzes = dbhelper.buscarQuizzes();
Ti.API.info("Quizzes cadastrados: " + quizzes.length);
var tableData = [];

for (var i = 0; i <= 20; i++){
  
  var row = Ti.UI.createTableViewRow({
    className: 'row',
    objName: 'row',
    touchEnabled: true,
    height: 100
  });

  var view = Ti.UI.createView({
    backgroundColor:'#008FD5',
    objName: 'view',
    rowID: i,
    width: Ti.UI.FILL,
    height: '100%'
  });

  var label = Ti.UI.createLabel({
    //backgroundColor:'#313F48',
    color: 'white',
    objName: 'label',
    text: i,
    //touchEnabled: false,
    left: 0,
    width: 200
  });
  
  view.add(label);
  row.add(view);
  tableData.push(row);
}

$.table.setData(tableData);
$.index.add($.table);
$.index.open();
